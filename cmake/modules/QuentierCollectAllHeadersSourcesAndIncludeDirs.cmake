macro(QUENTIER_COLLECT_SOURCES SOURCES)
  get_property(QUENTIER_ALL_SOURCES GLOBAL PROPERTY QUENTIER_ALL_SOURCES)
  foreach(SOURCE IN LISTS SOURCES)
    if(IS_ABSOLUTE ${SOURCE})
      list(APPEND QUENTIER_ALL_SOURCES "${SOURCE}")
    else()
      list(APPEND QUENTIER_ALL_SOURCES "${CMAKE_CURRENT_SOURCE_DIR}/${SOURCE}")
    endif()
  endforeach()
  set_property(GLOBAL PROPERTY QUENTIER_ALL_SOURCES ${QUENTIER_ALL_SOURCES})
endmacro()

