macro(COLLECT_SOURCES_FOR_CPPCHECK SOURCES)
  foreach(SOURCE ${SOURCES})
    list(APPEND QUENTIER_CPPCHECKABLE_SOURCES "${CMAKE_CURRENT_SOURCE_DIR}/${SOURCE}")
  endforeach()
endmacro()

macro(COLLECT_INCLUDE_DIRS DIRS)
  foreach(DIR ${DIRS})
    list(APPEND QUENTIER_CPPCHECKABLE_INCLUDE_DIRS "${CMAKE_CURRENT_SOURCE_DIR}/${DIR}")
  endforeach()
endmacro()
